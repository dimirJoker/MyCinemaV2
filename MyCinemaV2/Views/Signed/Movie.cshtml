<table class="table">
	<thead>
		<tr>
			<th>
				Sessions
			</th>
			<th><a asp-action="Create">Create New Session</a></th>@*--------------------TO DO--------------------*@
		</tr>
	</thead>
	<tbody>
		@if (ViewBag.SessionsList != null && ViewBag.SessionsList.Count > 0)
		{
			@foreach (SessionModel item in ViewBag.SessionsList)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Session)
					</td>
					<td>
						@Html.ActionLink("Details", "Session", new {id=item.Id})@*--------------------TO DO--------------------*@
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td>NO DATA</td>
			</tr>
		}
	</tbody>
</table>