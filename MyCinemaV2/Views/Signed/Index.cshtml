@model IEnumerable<MyCinemaV2.Models.MovieModel>
@{
	ViewData["Title"] = "Панель управления";
}
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th><a asp-action="Create">Create New</a></th>@*--------------------TO DO--------------------*@
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					@Html.ActionLink("Details", "Movie", new {id=item.Id})
				</td>
			</tr>
		}
	</tbody>
</table>